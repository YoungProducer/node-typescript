{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "target": "esnext",
      "module": "commonjs",
      "sourceMap": true,
      "allowJs": true,
      "lib": [ "es2015", "dom"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "exclude": [
      "/node_modules/",
      "/webpack.config.js",
    ],
    "include": [
      "./lib/**/*.ts",
      "./lib/**/*.test.ts",
      "./config/**/*.ts"
    ]
  }